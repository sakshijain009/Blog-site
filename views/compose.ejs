<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
	<div class="form-group">
		<label for="formTitle">Title</label>
		<input type="text" name="formTitle" id="formTitle" class="form-control" required>
		<label for="content">Content</label>
		<textarea placeholder="Enter Content" rows="20" id="content" class="form-control" name="postBody" required></textarea>
	</div>
	<button type="submit" name="button">Publish</button>
	
</form>

<%- include('partials/footer'); -%>